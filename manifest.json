{
    "manifest_version": 2,
    "name": "White Noise Extension",
    "version": "1.2",
    "description": "Play white noise to help you focus.",
    "permissions": ["activeTab", "storage"],
    "browser_action": {
      "default_icon": "icon.png",
      "default_popup": "popup.html"
    },
    "background": {
      "scripts": ["background.js"],
      "persistent": true
    },
    "icons": {
      "48": "icon.png"
    }
  }
  